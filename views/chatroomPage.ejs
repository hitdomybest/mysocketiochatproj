<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat Example</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <ul class="pages">
    <li class="chat page">
      <div class="chatArea">
        <ul class="messages"></ul>
      </div>
      
      <input class="inputMessage" placeholder="Type here..." />
      <input type="button" id="sendMsgBtn" class="sendMsgBtnCls" value="Send" />
    </li>
    <li class="login page">
      <div class="form">

        <h3 class="title" style="font-size:24px;">Please input your nickname for chatting.</h3>

        <input class="usernameInput" type="text" maxlength="14" />
      </div>
    </li>
  </ul>

  <div id="hdnDiv">
     <input id="hdnUserIdInput" type="hidden" value="<%= userid %>" />
  </div>

  <script src="/jquery-1.10.2.min.js"></script>  
  <script src="/socket.io/socket.io.js"></script>
  <script src="/main.js"></script>

  <script type="text/javascript">
          var userId;

          $(document).ready(function(){

                userId="<%= userid %>";

          });
          
  </script>

</body>
</html>

